<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC"
    tools:context=".Ipv4vV6">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Description -->

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginLeft="50dp"
            android:text="IPv4 Subnetting Practice"
            android:textStyle="bold"
            android:textSize="24sp" />

        <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice IPv4 Subnetting with a problem generator.
                           Still learning? -- all free!"
        android:layout_below="@id/title"
        android:layout_marginTop="8dp"
            android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <!-- Content Wrap -->
        <LinearLayout
            android:id="@+id/content_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="0dp"
            android:background="#CCCCCC"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- List Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <!-- Item 3 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solve the five attributes for the given Target IP and CIDR" />

                <!-- Item 4 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click [Check] to check if your answer was correct" />

                <!-- Item 5 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click [Show] to view correct answers" />

                <!-- Item 6 -->

                <!-- Item 7 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Radio Button 1 -->
                    <RadioButton
                        android:id="@+id/show_all_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Show all" />

                    <!-- Radio Button 2 -->
                    <RadioButton
                        android:id="@+id/check_all_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check All" />

                </LinearLayout>

            </LinearLayout>

            <!-- New Problem Button -->
            <Button
                android:id="@+id/new_problem_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="New Problem" />

            <!-- Table Layout for Input -->

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp">

                        <!-- TableRow 1 -->


                        <TableRow>

                            <!-- Target IP Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text="Target IP address"
                                android:textColor="@color/black" />

                            <!-- Target IP Input -->


                            <EditText
                                android:id="@+id/target_ip_edit_text0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:inputType="number"
                                android:maxLength="5" />

                            <!-- CIDR Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/" />

                            <!-- CIDR Input -->
                            <EditText
                                android:id="@+id/target_ip_edit_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:inputType="number"
                                android:maxLength="5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/" />

                            <!-- CIDR Input -->
                            <EditText
                                android:id="@+id/target_ip_edit_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:inputType="number"
                                android:maxLength="5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/" />

                            <!-- CIDR Input -->
                            <EditText
                                android:id="@+id/target_ip_edit_text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:inputType="number"
                                android:maxLength="5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/" />

                            <!-- CIDR Input -->
                            <EditText
                                android:id="@+id/target_ip_edit_text4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:inputType="number"
                                android:maxLength="2" />


                        </TableRow>


                        <!-- TableRow 2 -->


                    </TableLayout>

                </LinearLayout>

            </HorizontalScrollView>


            <!-- Submit Button -->
            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Submit" />

        </LinearLayout>






    <!-- Footer -->
   <!-- <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.7"
        android:textSize="12sp"
        android:layout_below="@id/content_wrap"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>-->


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_wrap"
            android:layout_marginTop="16dp">


        <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_wrap"
        android:layout_marginTop="16dp"
