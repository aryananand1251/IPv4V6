                android:layout_marginStart="8dp"
                android:padding="8dp"/>
            <EditText
                android:id="@+id/broadcastAnswer3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
