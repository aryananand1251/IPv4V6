                android:layout_marginStart="8dp"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/lastHostAnswer4TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:layout_marginStart="8dp"
                android:padding="8dp"/>




            <!-- Check/Show Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <Button
                    android:id="@+id/network_show_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="showNetwork"
                    android:text="Check" />

            </LinearLayout>



            <!-- Answer Input -->


        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/bcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Broadcast"
                android:textStyle="bold"
                android:padding="8dp"/>
            <!-- IP Address Input -->
            <EditText
                android:id="@+id/broadcastAnswer1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:layout_marginStart="8dp"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/broadcastAnswer2TextView"
                android:layout_width="wrap_content"
