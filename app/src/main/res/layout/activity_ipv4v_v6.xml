            <TextView
                android:id="@+id/nsubnet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Subnet"
                android:textStyle="bold"
                android:padding="8dp"/>
            <!-- IP Address Input -->
            <EditText
                android:id="@+id/nextSubnetAnswer1TextView"
                android:layout_width="wrap_content"
