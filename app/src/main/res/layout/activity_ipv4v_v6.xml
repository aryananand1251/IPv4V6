            <!-- Check/Show Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/network_show_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="showNetwork"
                    android:text="Check" />



            </LinearLayout>




            <!-- Answer Input -->


        </TableRow>


        <TableRow>
            <TextView
